{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "esnext",
    "paths": {
      "@text-based/alpaca": ["libs/alpaca/src/index.ts"],
      "@text-based/controller-logic": ["libs/controller-logic/src/index.ts"],
      "@text-based/home-assistant": ["libs/home-assistant/src/index.ts"],
      "@text-based/mqtt": ["libs/mqtt/src/index.ts"],
      "@text-based/persistence": ["libs/persistence/src/index.ts"],
      "@text-based/portainer": ["libs/portainer/src/index.ts"],
      "@text-based/rules-engine": ["libs/rules-engine/src/index.ts"],
      "@text-based/server": ["libs/server/src/index.ts"],
      "@text-based/terminal": ["libs/terminal/src/index.ts"],
      "@text-based/tty": ["libs/tty/src/index.ts"],
      "@text-based/utilities": ["libs/utilities/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
