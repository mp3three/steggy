{
  "compileOnSave": false,
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "strictPropertyInitialization": false,
    "strict": false,
    "strictBindCallApply": false,
    "strictFunctionTypes": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noStrictGenericChecks": true,
    "alwaysStrict": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "esnext",
    "paths": {
      "@steggy/boilerplate": ["libs/boilerplate/src/index.ts"],
      "@steggy/controller-shared": ["libs/controller-shared/src/index.ts"],
      "@steggy/controller-sdk": ["libs/controller-sdk/src/index.ts"],
      "@steggy/formio": ["libs/formio/src/index.ts"],
      "@steggy/home-assistant": ["libs/home-assistant/src/index.ts"],
      "@steggy/home-assistant-shared": [
        "libs/home-assistant-shared/src/index.ts"
      ],
      "@steggy/mqtt": ["libs/mqtt/src/index.ts"],
      "@steggy/persistence": ["libs/persistence/src/index.ts"],
      "@steggy/rules-engine": ["libs/rules-engine/src/index.ts"],
      "@steggy/server": ["libs/server/src/index.ts"],
      "@steggy/terminal": ["libs/terminal/src/index.ts"],
      "@steggy/tty": ["libs/tty/src/index.ts"],
      "@steggy/utilities": ["libs/utilities/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "references": [
    { "path": "./apps/build-pipeline/tsconfig.json" },
    { "path": "./apps/config-builder/tsconfig.json" },
    { "path": "./apps/home-cli/tsconfig.json" },
    { "path": "./apps/home-configure/tsconfig.json" },
    { "path": "./apps/home-controller/tsconfig.json" },
    { "path": "./apps/log-formatter/tsconfig.json" },
    { "path": "./apps/pico-relay/tsconfig.json" },
    { "path": "./libs/boilerplate/tsconfig.json" },
    { "path": "./libs/controller-sdk/tsconfig.json" },
    { "path": "./libs/controller-shared/tsconfig.json" },
    { "path": "./libs/formio/tsconfig.json" },
    { "path": "./libs/home-assistant-shared/tsconfig.json" },
    { "path": "./libs/home-assistant/tsconfig.json" },
    { "path": "./libs/mqtt/tsconfig.json" },
    { "path": "./libs/node-red-contrib-steggy/tsconfig.json" },
    { "path": "./libs/persistence/tsconfig.json" },
    { "path": "./libs/rules-engine/tsconfig.json" },
    { "path": "./libs/server/tsconfig.json" },
    { "path": "./libs/tty/tsconfig.json" },
    { "path": "./libs/utilities/tsconfig.json" }
  ]
}
