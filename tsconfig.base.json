{
  "compileOnSave": false,
  "include": [
    "apps/*/src/**/*tsx",
    "apps/*/src/**/*ts",
    "libs/*/src/**/*ts",
    "libs/*/src/*ts",
    "libs/**/*ts",
    "libs/**/*tsx",
    "apps/**/*ts",
    "apps/**/*tsx"
  ],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "strictPropertyInitialization": false,
    "strict": false,
    "strictBindCallApply": false,
    "strictFunctionTypes": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noStrictGenericChecks": true,
    "alwaysStrict": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "esnext",
    "paths": {
      "@asdf/foo": ["libs/test/src/index.ts"],
      "@automagical/boilerplate": ["libs/boilerplate/src/index.ts"],
      "@automagical/controller-logic": ["libs/controller-logic/src/index.ts"],
      "@automagical/controller-shared": ["libs/controller-shared/src/index.ts"],
      "@automagical/home-assistant": ["libs/home-assistant/src/index.ts"],
      "@automagical/home-assistant-shared": [
        "libs/home-assistant-shared/src/index.ts"
      ],
      "@automagical/mqtt": ["libs/mqtt/src/index.ts"],
      "@automagical/persistence": ["libs/persistence/src/index.ts"],
      "@automagical/rules-engine": ["libs/rules-engine/src/index.ts"],
      "@automagical/server": ["libs/server/src/index.ts"],
      "@automagical/terminal": ["libs/terminal/src/index.ts"],
      "@automagical/tty": ["libs/tty/src/index.ts"],
      "@automagical/utilities": ["libs/utilities/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "references": [
    {
      "path": "./libs/boilerplate/tsconfig.json"
    },
    {
      "path": "./libs/controller-logic/tsconfig.json"
    },
    {
      "path": "./libs/controller-shared/tsconfig.json"
    },
    {
      "path": "./libs/home-assistant/tsconfig.json"
    },
    {
      "path": "./libs/home-assistant-shared/tsconfig.json"
    },
    {
      "path": "./libs/mqtt/tsconfig.json"
    },
    {
      "path": "./libs/persistence/tsconfig.json"
    },
    {
      "path": "./libs/rcon/tsconfig.json"
    },
    {
      "path": "./libs/rules-engine/tsconfig.json"
    },
    {
      "path": "./libs/server/tsconfig.json"
    },
    {
      "path": "./libs/tty/tsconfig.json"
    },
    {
      "path": "./libs/utilities/tsconfig.json"
    }
  ]
}
