{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@automagical/formio-sdk": ["libs/formio-sdk/src/index.ts"],
      "@automagical/home-assistant": ["libs/home-assistant/src/index.ts"],
      "@automagical/logger": ["libs/logger/src/index.ts"],
      "@automagical/type-writer": ["libs/type-writer/src/index.ts"],
      "@automagical/utilities": ["libs/utilities/src/index.ts"],
      "@automagical/validation": ["libs/validation/src/index.ts"],
      "@automagical/licenses": ["libs/licenses/src/index.ts"],
      "@automagical/authentication": ["libs/authentication/src/index.ts"],
      "@automagical/fetch": ["libs/fetch/src/index.ts"],
      "@automagical/contracts": ["libs/contracts/src/index.ts"],
      "@automagical/config": ["libs/config/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
