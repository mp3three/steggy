{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "jsx": "react",
    "importHelpers": true,
    "target": "es2015",
    "allowJs": true,
    "module": "esnext",
    "lib": [
      "es2019",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@automagical/contracts": [
        "libs/contracts/src/index.ts"
      ],
      "@automagical/contracts/authentication": [
        "libs/contracts/src/libs/authentication/index.ts"
      ],
      "@automagical/contracts/config": [
        "libs/contracts/src/config/index.ts"
      ],
      "@automagical/contracts/constants": [
        "libs/contracts/src/constants/index.ts"
      ],
      "@automagical/contracts/custom": [
        "libs/contracts/src/libs/custom/index.ts"
      ],
      "@automagical/contracts/formio-sdk": [
        "libs/contracts/src/libs/formio-sdk/index.ts"
      ],
      "@automagical/contracts/home-assistant": [
        "libs/contracts/src/libs/home-assistant/index.ts"
      ],
      "@automagical/contracts/persistence": [
        "libs/contracts/src/libs/persistence/index.ts"
      ],
      "@automagical/contracts/server": [
        "libs/contracts/src/libs/server/index.ts"
      ],
      "@automagical/contracts/terminal": [
        "libs/contracts/src/libs/terminal/index.ts"
      ],
      "@automagical/contracts/utilities": [
        "libs/contracts/src/libs/utilities/index.ts"
      ],
      "@automagical/formio-sdk": [
        "libs/formio-sdk/src/index.ts"
      ],
      "@automagical/home-assistant": [
        "libs/home-assistant/src/index.ts"
      ],
      "@automagical/persistence/mongo": [
        "libs/persistence/src/mongo/index.ts"
      ],
      "@automagical/server": [
        "libs/server/src/index.ts"
      ],
      "@automagical/terminal": [
        "libs/terminal/src/index.ts"
      ],
      "@automagical/testing": [
        "libs/testing/src/index.ts"
      ],
      "@automagical/utilities": [
        "libs/utilities/src/index.ts"
      ],
      "@automagical/controller-logic": [
        "libs/controller-logic/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}