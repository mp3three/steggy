{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "automagical.json",
  "title": "Automagical",
  "description": "Additional metadata for applications",
  "type": "object",
  "anyOf": [{
    "required": ["applicationModule"],
    "properties": {
      "type": {
        "type": "string",
        "enum": [
          "application"
        ]
      },
      "applicationModule": {
        "type": "string",
        "description": "File name for primary application module (src/root/{name})"
      }
    },
    "additionalProperties": false
  }, {
    "properties": {
      "type": {
        "type": "string",
        "enum": [
          "library"
        ]
      },
      "configuration": {
        "$ref": "#/definitions/configuration"
      }
    },
    "additionalProperties": false
  }],
  "required": ["type"],
  "definitions": {
    "configuration": {
      "description": "Supplemental information to 0",
      "patternProperties": {
        "[A-Z_]*": {
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "string",
                "boolean",
                "number",
                "password",
                "string[]",
                "url",
                "record"
              ]
            },
            "description": {
              "type": "string",
              "description": "Optional extended description to describe what is going on"
            },
            "default": {
              "description": "Declared default value. Does not affect runtime build code, but is used with devtools and similar"
            }
          },
          "required": ["type"],
          "anyOf": [{
              "description": "String config",
              "$ref": "#/definitions/string-config"
            },
            {
              "description": "Boolean config",
              "$ref": "#/definitions/boolean-config"
            },
            {
              "description": "Number config",
              "$ref": "#/definitions/number-config"
            },
            {
              "description": "Password config",
              "$ref": "#/definitions/password-config"
            },
            {
              "description": "URL config",
              "$ref": "#/definitions/url-config"
            }
          ]
        }
      }
    },
    "string-config": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "description": true,
        "type": {
          "type": "string",
          "pattern": "string"
        },
        "enum": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "default": {
          "type": "string"
        }
      },
      "required": ["type"]
    },
    "boolean-config": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "description": true,
        "type": {
          "pattern": "boolean"
        },
        "default": {
          "type": "boolean"
        }
      },
      "required": ["type"]
    },
    "number-config": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "description": true,
        "type": {
          "pattern": "number"
        },
        "default": {
          "type": "number"
        }
      },
      "required": ["type"]
    },
    "password-config": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "description": true,
        "type": {
          "pattern": "password"
        }
      },
      "required": ["type"]
    },
    "url-config": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "description": true,
        "type": {
          "pattern": "url"
        },
        "default": {
          "type": "string"
        }
      },
      "required": ["type"]
    }
  }
}
