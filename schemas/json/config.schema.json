{
  "type": "object",
  "description": "Describe the configuration used by this application / library. This information can be used for non-runtime processes such as config file building. Runtime defaults must be defined in `src/config.ts`",
  "patternProperties": {
    "[A-Z_]*": {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "string",
            "boolean",
            "number",
            "password",
            "string[]",
            "internal",
            "url",
            "record"
          ]
        },
        "description": {
          "type": "string",
          "description": "Optional extended description to describe what is going on"
        },
        "default": {
          "description": "Declared default value. Does not affect runtime build code, but is used with devtools and similar"
        }
      },
      "required": ["type"],
      "anyOf": [
        {
          "description": "String config",
          "$ref": "#/definitions/string-config"
        },
        {
          "description": "Boolean config",
          "$ref": "#/definitions/boolean-config"
        },
        {
          "description": "Number config",
          "$ref": "#/definitions/number-config"
        },
        {
          "description": "Password config",
          "$ref": "#/definitions/password-config"
        },
        {
          "description": "URL config",
          "$ref": "#/definitions/url-config"
        },
        {
          "description": "Internal config",
          "$ref": "#/definitions/internal-config"
        }
      ]
    }
  },
  "definitions": {
    "configuration": {
      "description": "Supplemental information to 0",
      "patternProperties": {
        "[A-Z_]*": {
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "string",
                "boolean",
                "number",
                "password",
                "string[]",
                "url",
                "record",
                "internal"
              ]
            },
            "configurable": {
              "type": "boolean",
              "description": "User configurable (false for managed by code)"
            },
            "description": {
              "type": "string",
              "description": "Optional extended description to describe what is going on"
            },
            "default": {
              "description": "Declared default value. Does not affect runtime build code, but is used with devtools and similar"
            }
          },
          "required": ["type"],
          "anyOf": [
            {
              "description": "String config",
              "$ref": "#/definitions/string-config"
            },
            {
              "description": "Boolean config",
              "$ref": "#/definitions/boolean-config"
            },
            {
              "description": "Number config",
              "$ref": "#/definitions/number-config"
            },
            {
              "description": "Password config",
              "$ref": "#/definitions/password-config"
            },
            {
              "description": "URL config",
              "$ref": "#/definitions/url-config"
            },
            {
              "description": "Internal config",
              "$ref": "#/definitions/internal-config"
            }
          ]
        }
      }
    },
    "string-config": {
      // StringConfig
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "configurable": true,
        "description": true,
        "type": {
          "type": "string",
          "pattern": "string"
        },
        "enum": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "default": {
          "type": "string"
        },
        "required": {
          "$ref": "#/definitions/required"
        },
        "warnDefault": {
          "$ref": "#/definitions/warnDefault"
        },
        "careful": {
          "$ref": "#/definitions/careful"
        }
      },
      "required": ["type", "description"]
    },
    "boolean-config": {
      // BooleanConfig
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "configurable": true,
        "description": true,
        "type": {
          "pattern": "boolean"
        },
        "default": {
          "type": "boolean"
        },
        "required": {
          "$ref": "#/definitions/required"
        },
        "warnDefault": {
          "$ref": "#/definitions/warnDefault"
        },
        "careful": {
          "$ref": "#/definitions/careful"
        }
      },
      "required": ["type", "description"]
    },
    "number-config": {
      // NumberConfig
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "configurable": true,
        "description": true,
        "type": {
          "pattern": "number"
        },
        "default": {
          "type": "number"
        },
        "required": {
          "$ref": "#/definitions/required"
        },
        "warnDefault": {
          "$ref": "#/definitions/warnDefault"
        },
        "careful": {
          "$ref": "#/definitions/careful"
        }
      },
      "required": ["type", "description"]
    },
    "internal-config": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "description": true,
        "type": {
          "pattern": "internal"
        },
        "configurable": {
          "type": "boolean"
        },
        "default": true
      },
      "required": ["type", "description", "configurable"]
    },
    "password-config": {
      // PasswordConfig
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "configurable": true,
        "description": true,
        "type": {
          "pattern": "password"
        },
        "required": {
          "$ref": "#/definitions/required"
        },
        "warnDefault": {
          "$ref": "#/definitions/warnDefault"
        },
        "careful": {
          "$ref": "#/definitions/careful"
        }
      },
      "required": ["type", "description"]
    },
    "url-config": {
      // UrlConfig
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "configurable": true,
        "description": true,
        "type": {
          "pattern": "url"
        },
        "default": {
          "type": "string"
        },
        "required": {
          "$ref": "#/definitions/required"
        },
        "warnDefault": {
          "$ref": "#/definitions/warnDefault"
        },
        "careful": {
          "$ref": "#/definitions/careful"
        }
      },
      "required": ["type", "description"]
    },
    "warnDefault": {
      "type": "boolean",
      "description": "Emit a warning at boot if the default value for this property hasn't been overridden",
      "default": false
    },
    "required": {
      "type": "boolean",
      "description": "Process will refuse to start if value is not provided",
      "default": false
    },
    "careful": {
      "type": "boolean",
      "description": "This property is technical / security in nature, not general app settings",
      "default": false
    }
  }
}
