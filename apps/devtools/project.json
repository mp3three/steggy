{
  "root": "apps/devtools",
  "sourceRoot": "apps/devtools/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "@nrwl/node:execute",
      "options": {
        "buildTarget": "devtools:build",
        "inspect": "inspect",
        "port": 33336
      }
    },
    "prepare": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx nx build devtools --configuration=config-scanner"
          }
        ]
      }
    },
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "assets": [
          {
            "input": "libs/utilities",
            "glob": "*.json",
            "output": "./assets/utilities"
          },
          {
            "input": "libs/boilerplate",
            "glob": "*.json",
            "output": "./assets/boilerplate"
          },
          {
            "input": "libs/tty",
            "glob": "*.json",
            "output": "./assets/tty"
          },
          {
            "input": "apps/devtools",
            "glob": "*.json",
            "output": "./assets/devtools"
          },
          {
            "input": "apps/home-controller",
            "glob": "*.json",
            "output": "./assets/home-controller"
          },
          {
            "input": "apps/devtools",
            "glob": "*.json",
            "output": "./assets/devtools"
          },
          {
            "input": "libs/home-assistant",
            "glob": "*.json",
            "output": "./assets/home-assistant"
          },
          {
            "input": "libs/controller-logic",
            "glob": "*.json",
            "output": "./assets/controller-logic"
          },
          {
            "input": "libs/server",
            "glob": "*.json",
            "output": "./assets/server"
          },
          {
            "input": "libs/persistence",
            "glob": "*.json",
            "output": "./assets/persistence"
          }
        ],
        "outputPath": "dist/apps/devtools",
        "generatePackageJson": true,
        "fileReplacements": [
          {
            "replace": "apps/devtools/src/environments/environment.ts",
            "with": "apps/devtools/src/environments/develop.environment.ts"
          }
        ],
        "main": "apps/devtools/src/entrypoints/main.ts",
        "tsConfig": "apps/devtools/tsconfig.app.json"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": false,
          "inspect": false,
          "fileReplacements": []
        },
        "scan-config": {
          "outputPath": "dist/config-scanner/devtools",
          "fileReplacements": [
            {
              "replace": "apps/devtools/src/environments/environment.ts",
              "with": "apps/devtools/src/environments/scanner.environment.ts"
            }
          ]
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/devtools/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "npx figlet-cli -f Pagga Devtools",
            "description": "Announce it"
          },
          {
            "command": "npx nx build devtools --configuration=production",
            "description": "Create production optimized build"
          },
          {
            "command": "npx nx build devtools --configuration=scan-config",
            "description": "Prep the config scanner"
          },
          {
            "command": "npx terser dist/apps/devtools/main.js -c -m --keep-classnames --module > dist/apps/devtools/minified.js",
            "description": "Minify it"
          },
          {
            "command": "echo '#!/usr/bin/env node' > dist/apps/devtools/main.js; cat dist/apps/devtools/minified.js >> dist/apps/devtools/main.js",
            "description": "Replace output (can't be done in previous step)"
          },
          {
            "command": "node dist/config-scanner/devtools/main.js > dist/apps/devtools/assets/config.json",
            "description": "Cache the completed config"
          },
          {
            "command": "npx yarn publish --cwd dist/apps/devtools --non-interactive",
            "description": "Publish it"
          }
        ]
      }
    }
  },
  "tags": []
}
