SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
cd $SCRIPT_DIR
cd ../../../

VERSION=$(cat "apps/devtools/package.json" | grep version | awk -F: '{ print $2 }' | awk -F, '{ print $1 }'| xargs)
BUILT=$(cat "dist/apps/devtools/package.json" | grep version | awk -F: '{ print $2 }' | awk -F, '{ print $1 }'| xargs)

if [ "$VERSION" != "$BUILT" ]; then
  npx nx build devtools
fi

node ./dist/apps/devtools/main.js $1
