{
  "root": "apps/pico-relay",
  "sourceRoot": "apps/pico-relay/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "pico-relay:build",
        "inspect": "inspect",
        "port": 33338
      }
    },
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "assets": [],
        "outputPath": "dist/apps/pico-relay",
        "generatePackageJson": true,
        "main": "apps/pico-relay/src/entrypoints/main.ts",
        "tsConfig": "apps/pico-relay/tsconfig.app.json"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": false,
          "inspect": false
        },
        "scanner": {
          "outputPath": "dist/scanner/pico-relay",
          "fileReplacements": [
            {
              "replace": "apps/pico-relay/src/environments/environment.ts",
              "with": "apps/pico-relay/src/environments/scanner.environment.ts"
            }
          ]
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/pico-relay/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "./tools/scripts/docker-build-publish.sh pico-relay",
            "description": "Assemble docker image"
          }
        ]
      }
    }
  },
  "tags": ["backend"]
}
