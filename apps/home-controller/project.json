{
  "root": "apps/home-controller",
  "sourceRoot": "apps/home-controller/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "@nrwl/node:execute",
      "options": {
        "buildTarget": "home-controller:build",
        "inspect": "inspect",
        "port": 33334
      }
    },
    "build": {
      "executor": "@nrwl/node:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/home-controller",
        "generatePackageJson": true,
        "main": "apps/home-controller/src/entrypoints/main.ts",
        "tsConfig": "apps/home-controller/tsconfig.app.json",
        "assets": [
          {
            "input": "libs/utilities",
            "glob": "metadata.json",
            "output": "./assets/utilities"
          },
          {
            "input": "libs/home-assistant",
            "glob": "metadata.json",
            "output": "./assets/home-assistant"
          },
          {
            "input": "libs/controller-logic",
            "glob": "metadata.json",
            "output": "./assets/controller-logic"
          },
          {
            "input": "libs/server",
            "glob": "metadata.json",
            "output": "./assets/server"
          },
          {
            "input": "libs/persistence",
            "glob": "metadata.json",
            "output": "./assets/persistence"
          },
          {
            "input": "apps/home-controller",
            "glob": "metadata.json",
            "output": "./assets/home-controller"
          }
        ],
        "fileReplacements": [
          {
            "replace": "apps/home-controller/src/environments/environment.ts",
            "with": "apps/home-controller/src/environments/develop.environment.ts"
          }
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": false,
          "inspect": false,
          "fileReplacements": []
        },
        "scan-config": {
          "outputPath": "dist/config-scanner/home-controller",
          "fileReplacements": [
            {
              "replace": "apps/home-controller/src/environments/environment.ts",
              "with": "apps/home-controller/src/environments/scanner.environment.ts"
            }
          ]
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/home-controller/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/home-controller"],
      "options": {
        "jestConfig": "apps/home-controller/jest.config.js",
        "passWithNoTests": true
      }
    },
    "build-docker": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "npx nx build home-controller --configuration=production",
            "description": "Create production optimized build"
          },
          {
            "command": "terser dist/apps/home-controller/main.js -c -m --keep-classnames --module > dist/apps/home-controller/minified.js",
            "description": "Minify it"
          },
          {
            "command": "./tools/scripts/docker-build-publish.sh home-controller",
            "description": "Assemble docker image"
          }
        ]
      }
    }
  },
  "tags": []
}
