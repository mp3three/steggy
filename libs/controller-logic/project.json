{
  "root": "libs/controller-logic",
  "sourceRoot": "libs/controller-logic/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/node:package",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/controller-logic",
        "tsConfig": "libs/controller-logic/tsconfig.lib.json",
        "buildableProjectDepsInPackageJsonType": "peerDependencies",
        "updateBuildableProjectDepsInPackageJson": true,
        "packageJson": "libs/controller-logic/package.json",
        "main": "libs/controller-logic/src/index.ts",
        "assets": [
          "libs/controller-logic/*.md",
          "libs/controller-logic/metadata.json",
          "libs/controller-logic/package.json"
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": false,
          "fileReplacements": []
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/controller-logic/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "npx nx build controller-logic --configuration=production",
            "description": "Create production optimized build"
          },
          {
            "command": "yarn publish --cwd dist/libs/controller-logic --non-interactive",
            "description": "Publish it"
          }
        ]
      }
    }
  },
  "tags": ["nestjs"]
}
