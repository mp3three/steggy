{
  "root": "libs/lint",
  "sourceRoot": "libs/lint/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/lint",
        "main": "libs/lint/src/index.ts",
        "tsConfig": "libs/lint/tsconfig.lib.json",
        "assets": ["libs/lint/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/lint/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/lint"],
      "options": {
        "jestConfig": "libs/lint/jest.config.js",
        "passWithNoTests": true
      }
    },
    "dev-install": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          { "command": "npx nx build lint" },
          { "command": "npx yarn install -D ./dist/libs/lint" }
        ]
      }
    }
  },
  "tags": ["development"]
}
