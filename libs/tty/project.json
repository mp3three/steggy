{
  "root": "libs/tty",
  "sourceRoot": "libs/tty/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/node:package",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/tty",
        "tsConfig": "libs/tty/tsconfig.lib.json",
        "packageJson": "libs/tty/package.json",
        "main": "libs/tty/src/index.ts",
        "assets": ["libs/tty/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/tty/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "npx nx build tty --configuration=production",
            "description": "Create production optimized build"
          },
          {
            "command": "terser dist/apps/tty/main.js -c -m --keep-classnames --module > dist/apps/tty/main.js",
            "description": "Minify it (in place)"
          },
          {
            "command": "yarn publish --cwd dist/apps/tty --non-interactive",
            "description": "Publish it"
          }
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/tty"],
      "options": {
        "jestConfig": "libs/tty/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["nestjs", "console"]
}
