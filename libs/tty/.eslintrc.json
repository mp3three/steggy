{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "no-console": "off",
        "security/detect-object-injection": "off"
      },
      "parserOptions": {
        "project": ["libs/tty/tsconfig.lib.json"]
      }
    },
    {
      "files": ["*repl.ts"],
      "rules": {
        "radar/no-identical-functions": "off"
      }
    }
  ]
}
