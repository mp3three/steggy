{
  "configuration": {
    "GLOBAL_PREFIX": {
      "type": "string"
    },
    "MAX_REQUEST_ID": {
      "type": "number",
      "default": 2147483647
    },
    "BODY_SIZE": {
      "type": "string",
      "default": "100kb"
    },
    "COMPRESSION": {
      "type": "boolean",
      "default": false
    },
    "PORT": {
      "type": "number",
      "default": 7000,
      "description": "Set to value > 0 to enable"
    },
    "SSL_PORT": {
      "type": "number",
      "description": "Set to value > 0 to enable"
    },
    "SSL_KEY": {
      "type": "string",
      "description": "File path, required if SSL_PORT is active"
    },
    "SSL_CERT": {
      "type": "string",
      "description": "File path, required if SSL_PORT is active"
    },
    "SWAGGER_PATH": {
      "type": "string",
      "default": "/api"
    }
  }
}
