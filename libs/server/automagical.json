{
  "configuration": {
    "GLOBAL_PREFIX": {
      "type": "string"
    },
    "MAX_REQUEST_ID": {
      "type": "number",
      "default": 1000000000
    },
    "BODY_SIZE": {
      "type": "string",
      "default": "100kb"
    },
    "COMPRESSION": {
      "type": "boolean",
      "default": false
    },
    "PORT": {
      "type": "number",
      "default": 7000,
      "description": "Set to value > 0 to enable"
    },
    "SSL_PORT": {
      "type": "number",
      "description": "Set to value > 0 to enable"
    },
    "SSL_KEY": {
      "type": "string",
      "description": "File path, required if SSL_PORT is active"
    },
    "SSL_CERT": {
      "type": "string",
      "description": "File path, required if SSL_PORT is active"
    },
    "SWAGGER_PATH": {
      "type": "string",
      "default": "/api"
    },
    "ADMIN_KEY": {
      "type": "string",
      "description": "Leave blank to disable. If this value is provided via x-admin-key header, the request will be authorized as an admin"
    }
  }
}
