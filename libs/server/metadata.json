{
  "configuration": {
    "GLOBAL_PREFIX": {
      "type": "string",
      "description": "Ex: 'api' http://localhost:7000/normal/route/path => http://localhost:7000/api/normal/route/path",
      "careful": true,
      "default": "/api"
    },
    "CORS": {
      "type": "string",
      "default": "*",
      "description": "CORS origin for the server. Set to blank to disable middleware"
    },
    "CSURF": {
      "type": "boolean",
      "default": true,
      "description": "Enable the CSURF middleware"
    },
    "MAX_REQUEST_ID": {
      "type": "number",
      "default": 1000000000,
      "description": "Rollover point for request ids"
    },
    "BODY_SIZE": {
      "type": "string",
      "default": "100kb",
      "description": "Max JSON body size"
    },
    "COMPRESSION": {
      "type": "boolean",
      "default": true,
      "description": "Compress responses before sending"
    },
    "PORT": {
      "type": "number",
      "default": 7000,
      "description": "Set to value > 0 to enable"
    },
    "SSL_PORT": {
      "type": "number",
      "description": "Set to value > 0 to enable"
    },
    "SSL_KEY": {
      "type": "string",
      "description": "File path, required if SSL_PORT is active"
    },
    "SSL_CERT": {
      "type": "string",
      "description": "File path, required if SSL_PORT is active"
    },
    "SWAGGER_PATH": {
      "type": "string",
      "default": "/api",
      "description": "Where to access the swagger pages at? Blank to disable"
    },
    "ADMIN_KEY": {
      "type": "string",
      "description": "Leave blank to disable. If this value is provided via x-admin-key header, the request will be authorized as an admin",
      "careful": true
    },
    "AUTH_BYPASS": {
      "type": "boolean",
      "default": false,
      "description": "Ignore all authentication, and just let requests through",
      "careful": true
    },
    "HIDE_VERSION": {
      "type": "boolean",
      "default": false,
      "description": "Disable the /version endpoint"
    }
  }
}
