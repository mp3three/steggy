{
  "root": "libs/server",
  "sourceRoot": "libs/server/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/node:package",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/server",
        "tsConfig": "libs/server/tsconfig.lib.json",
        "packageJson": "libs/server/package.json",
        "main": "libs/server/src/index.ts",
        "assets": ["libs/server/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/server/**/*.ts"]
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "npx nx build server --configuration=production",
            "description": "Create production optimized build"
          },
          {
            "command": "terser dist/apps/server/main.js -c -m --keep-classnames --module > dist/apps/server/main.js",
            "description": "Minify it (in place)"
          },
          {
            "command": "yarn publish --cwd dist/apps/server --non-interactive",
            "description": "Publish it"
          }
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/server"],
      "options": {
        "jestConfig": "libs/server/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
