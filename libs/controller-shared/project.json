{
  "root": "libs/controller-shared",
  "sourceRoot": "libs/controller-shared/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/controller-shared",
        "tsConfig": "libs/controller-shared/tsconfig.lib.json",
        "buildableProjectDepsInPackageJsonType": "peerDependencies",
        "updateBuildableProjectDepsInPackageJson": true,
        "packageJson": "libs/controller-shared/package.json",
        "main": "libs/controller-shared/src/index.ts",
        "assets": [
          "libs/controller-shared/*.md",
          "libs/controller-shared/metadata.json",
          "libs/controller-shared/package.json"
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": false,
          "buildableProjectDepsInPackageJsonType": "peerDependencies",
          "updateBuildableProjectDepsInPackageJson": true,
          "fileReplacements": []
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/controller-shared/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "npx figlet-cli -f Pagga Controller Logic Shared",
            "description": "Announce it"
          },
          {
            "command": "npx nx build controller-logic --configuration=production",
            "description": "Create production optimized build"
          },
          {
            "command": "yarn publish --cwd dist/libs/controller-shared --non-interactive",
            "description": "Publish it"
          }
        ]
      }
    }
  },
  "tags": ["shared"]
}
