{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "no-console": "off",
        "no-loops/no-loops": "off",
        "security/detect-object-injection": "off"
      }
    },
    {
      "files": ["*repl.ts"],
      "rules": {
        "radar/no-identical-functions": "off"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
