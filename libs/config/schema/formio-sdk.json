{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "@automagical/formio-sdk",
  "type": "object",
  "additionalProperties": false,
  "$id": "formio-sdk.json",
  "properties": {
    "API_KEY": {
      "description": "Sent along with requests to provide access to the API server",
      "type": "string"
    },
    "LICENSE_SERVER": {
      "type": "string",
      "description": "The controlling license server for the api server",
      "default": "https://license.form.io"
    },
    "AUTH": {
      "type": "object",
      "additionalProperties": false,
      "required": ["email", "password"],
      "properties": {
        "email": {
          "description": "User login for the portal",
          "type": "string"
        },
        "password": {
          "description": "User password for the portal",
          "type": "string"
        }
      }
    },
    "BASE_PROJECT": {
      "type": "string",
      "default": "formio"
    },
    "PORTAL_BASE_URL": {
      "type": "string",
      "default": "https://portal.form.io"
    }
  }
}
