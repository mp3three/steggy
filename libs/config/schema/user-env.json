{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "@automagical User Environment",
  "description": "Provide complex configuration data to the libraries in this repository. ",
  "type": "object",
  "additionalProperties": false,
  "$id": "#/",
  "properties": {
    "merge": {
      "title": "Config merging",
      "type": "object",
      "description": "See @automagical/config for details on merging process",
      "properties": {
        "files": {
          "description": "File paths to additional files. Can be specified as relative to current file",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "urls": {
          "description": "Load config from URL"
        }
      }
    },
    "libs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "formio-sdk": {
          "$ref": "formio-sdk.json"
        },
        "licenses": {
          "$ref": "licenses.json"
        },
        "logger": {
          "$ref": "logger.json"
        },
        "home-assistant": {
          "$ref": "home-assistant.json"
        }
      }
    }
  }
}
