{
  "configuration": {
    "LOG_LEVEL": {
      "type": "string",
      "enum": ["info", "warn", "debug"],
      "default": "info",
      "description": "Minimum log level to process"
    },
    "MQTT_HOST": {
      "type": "string",
      "default": "localhost",
      "description": "Configuration property for mqtt connection"
    },
    "CACHE_PROVIDER": {
      "type": "string",
      "default": "memory",
      "enum": ["redis", "memory"],
      "description": "Redis is preferred if available"
    },
    "REDIS_HOST": {
      "type": "string",
      "default": "localhost",
      "description": "Configuration property for redis connection"
    },
    "MQTT_PORT": {
      "type": "number",
      "default": 1883,
      "description": "Configuration property for mqtt connection"
    },
    "REDIS_PORT": {
      "type": "number",
      "default": 6379,
      "description": "Configuration property for redis connection"
    },
    "REDIS_DEFAULT_TTL": {
      "type": "number",
      "default": 86400,
      "description": "Configuration property for redis connection",
      "careful": true
    },
    "MQTT_HEALTH_CHECK_INTERVAL": {
      "type": "number",
      "default": 5000,
      "description": "Announce via MQTT that this process is still alive on an interval"
    },
    "EVENT_EMITTER_MAX_LISTENENERS": {
      "type": "number",
      "default": 20,
      "description": "Internal use",
      "careful": true
    }
  }
}
