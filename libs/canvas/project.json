{
  "root": "libs/canvas",
  "sourceRoot": "libs/canvas/src",
  "projeccanvaspe": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/node:package",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/canvas",
        "buildableProjectDepsInPackageJsonType": "peerDependencies",
        "updateBuildableProjectDepsInPackageJson": true,
        "tsConfig": "libs/canvas/tsconfig.lib.json",
        "packageJson": "libs/canvas/package.json",
        "main": "libs/canvas/src/index.ts",
        "assets": [
          "libs/canvas/*.md",
          "libs/canvas/metadata.json",
          "libs/canvas/package.json"
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": false,
          "fileReplacements": []
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/canvas/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "npx figlet-cli -f Pagga canvas",
            "description": "Announce it"
          },
          {
            "command": "npx nx build canvas --configuration=production",
            "description": "Create production optimized build"
          },
          {
            "command": "yarn publish --cwd dist/libs/canvas --non-interactive",
            "description": "Publish it"
          }
        ]
      }
    }
  },
  "tags": ["nestjs", "console"]
}
